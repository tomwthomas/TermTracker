<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_view_course"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tomwt.mobile.termtracker.ViewCourseActivity"
    tools:showIn="@layout/activity_view_course">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Title:"/>

    <EditText
        android:id="@+id/data_title"
        android:layout_below="@id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title placeholder text"/>

    <TextView
        android:id="@+id/txt_details"
        android:layout_below="@+id/data_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Details:"/>

    <EditText
        android:id="@+id/data_details"
        android:layout_below="@id/txt_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title placeholder text"/>

    <TextView
        android:id="@+id/txt_startDate"
        android:layout_below="@+id/data_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Start Date:"/>

    <EditText
        android:id="@+id/data_startDate"
        android:layout_below="@id/txt_startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start date placeholder text"/>

    <TextView
    android:id="@+id/txt_endDate"
    android:layout_below="@+id/data_startDate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Course End Date:"/>

    <EditText
        android:id="@+id/data_endDate"
        android:layout_below="@id/txt_endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End date placeholder text"/>

    <TextView
        android:id="@+id/txt_status"
        android:layout_below="@+id/data_endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Status:"/>

    <Spinner
        android:id="@+id/statusSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_status"/>

    <TextView
        android:id="@+id/txt_mentor"
        android:layout_below="@+id/statusSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Mentor:"/>

    <EditText
        android:id="@+id/data_mentor"
        android:layout_below="@id/txt_mentor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course mentor placeholder text"/>

    <TextView
        android:id="@+id/txt_assessments"
        android:layout_below="@+id/data_mentor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assessments for this Course:"/>

    <ListView
        android:id="@+id/android:list"
        android:layout_below="@+id/txt_assessments"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</RelativeLayout>
