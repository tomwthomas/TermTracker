<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_view_assessment_alert"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tomwt.mobile.termtracker.ViewAssessmentAlertActivity"
    tools:showIn="@layout/activity_view_assessment_alert">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px" />

    <TextView
        android:id="@+id/txt_alertText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert Message:"/>

    <EditText
        android:id="@+id/data_alertText"
        android:layout_below="@id/txt_alertText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert message placeholder text"/>

    <TextView
        android:id="@+id/txt_alertDate"
        android:layout_below="@+id/data_alertText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date to send alert:"/>

    <EditText
        android:id="@+id/data_alertDate"
        android:layout_below="@id/txt_alertDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert date placeholder text"/>

</RelativeLayout>
