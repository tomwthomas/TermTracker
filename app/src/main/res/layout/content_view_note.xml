<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_view_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tomwt.mobile.termtracker.ViewNoteActivity"
    tools:showIn="@layout/activity_view_note">


    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note:"/>

    <EditText
        android:id="@+id/data_title"
        android:layout_below="@id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAlignment="gravity"
        android:text="Title placeholder text"/>

    <ImageView
        android:id="@+id/image_for_note"
        android:layout_below="@+id/data_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_take_picture"
        android:paddingTop="10dp"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_for_note"
        android:layout_centerHorizontal="true"
        android:text="Take Photo"
        android:onClick="takePhoto" />

</RelativeLayout>
